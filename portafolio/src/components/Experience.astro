---
import ExperienceItem, {type JobProps} from './ExperienceItem.astro';


const EXPERIENCES = [
  {
    title: "Startup Tech Innovators",
    releaseDate: "Enero de 2023 - Junio de 2023",
    description:
      "Participé en el desarrollo de una plataforma SaaS, contribuyendo al diseño de la arquitectura del sistema, la implementación de APIs RESTful y la integración con servicios en la nube como AWS y Azure."
  },
  {
    title: "Agencia Digital XYZ",
    releaseDate: "Marzo de 2021 - Diciembre de 2022",
    description:
      "Colaboré en proyectos de desarrollo web para clientes diversos, implementando soluciones front-end y back-end, mejorando la experiencia del usuario y optimizando el rendimiento del sitio."
  },
  {
    title: "Adox S.A",
    releaseDate: "Mayo a Septiembre de 2019",
    description:
      "Get access to over 20+ pages including a dashboard layout, charts, kanban board, calendar, and pre-order E-commerce & Marketing pages."
  },
  
]
---

<ol class="relative border-s border-gray-200 dark:border-gray-700">  
  {EXPERIENCES.map((experience: JobProps, index: number) => (
    <ExperienceItem 
      title={experience.title}
      releaseDate={experience.releaseDate}
      description={experience.description}
      latest ={index == 0 ? true : false}
    />
  ))}
</ol>
