---
interface Props {
  title?: string;
  id:string;
}

const { title = "Contacto", id } = Astro.props;
---
<section id={id} class="w-full bg-gray-900 text-gray-200 pt-10 pb-20">
  <h2 class="text-2xl font-bold mb-6 text-center">{title}</h2>
  
  <form action="https://formspree.io/f/xpwywrov" method="POST" class="mx-40">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Inputs a la izquierda -->
      <div class="flex flex-col gap-4">
        <input 
          type="text" 
          name="nombre" 
          placeholder="Tu nombre" 
          class="p-2 rounded-md w-full text-gray-200 border-gray-600 focus:ease-in transform border-2" 
          required 
        />
        <input 
          type="email" 
          name="email" 
          placeholder="Tu email" 
          class="p-2 rounded-md w-full text-gray-200 border-gray-600 border-2" 
          required 
        />
      </div>
      
      <!-- Textarea a la derecha -->
      <div>
        <textarea 
          name="mensaje" 
          rows="5" 
          placeholder="Tu mensaje" 
          class="p-2 rounded-md w-full h-full text-gray-200 border-gray-600 border-2 resize-none" 
          required
        ></textarea>
      </div>
    </div>

    <!-- BotÃ³n enviar -->
    <div class="mt-6 flex justify-center">
      <button 
        type="submit" 
        class="bg-fuchsia-800 cursor-pointer hover:bg-fuchsia-900 ease-in transition text-white py-3 px-8 rounded-md w-full md:w-1/2 text-center font-semibold"
      >
        Enviar
      </button>
    </div>
  </form>
</section>
