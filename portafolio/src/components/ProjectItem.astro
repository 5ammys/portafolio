---
interface Props {
  title: string;
  description: string;
  link?: string;
  githubUrl: string;
  imageUrl: string;
  tags: string[];
}

const { title, description, imageUrl, link, githubUrl, tags } = Astro.props as Props;
---
<div class="max-w-md h-full flex flex-col bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-slate-900 dark:border-gray-700">
  <a href="#">
    <img class="rounded-t-lg py-1" src={imageUrl} alt="" />
  </a>
  <div class="p-5 flex flex-col flex-grow justify-between">
    <div>
      <a href="#">
        <h5 class="mb-2 text-md font-bold tracking-tight text-gray-900 dark:text-gray-300">
          {title}
        </h5>
      </a>
      <p class="mb-3 text-xs text-gray-700 dark:text-gray-400">
        {description}
      </p>
      <div class="mb-3 mt-8">
        {tags.map(tag => (
          <span
            class="inline-block bg-gray-200 rounded-full px-2 py-1 text-xs font-semibold text-gray-700 mr-1 mb-2 dark:bg-black dark:text-cyan-300"
          >
            {tag}
          </span>
        ))}
      </div>
    </div>

    <!-- Links fijados al fondo -->
    <div class="flex space-x-4 mt-6 text-[5px]">
      <a 
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center text-sm text-blue-600 dark:text-blue-400 hover:underline"
      >
        Preview
        <svg
          class="w-3 h-3"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 3h7m0 0v7m0-7L10 14"
          />
        </svg>
      </a>

      <a 
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center text-sm text-blue-600 dark:text-blue-400 hover:underline"
      >
        GitHub
        <svg
          class="w-3 h-3"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 3h7m0 0v7m0-7L10 14"
          />
        </svg>
      </a>
    </div>
  </div>
</div>
